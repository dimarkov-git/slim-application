{
  "name": "dimarkov/slim-application",
  "type": "project",
  "description": "Provides a GitHub repository template for a PHP library based on slim framework.",
  "homepage": "https://github.com/dimarkov-git/slim-application",
  "license": "MIT",
  "authors": [
    {
      "name": "Denis Markov",
      "email": "dimarkov@outlook.com"
    }
  ],
  "require": {
    "php": "^7.4.9",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-session": "*",
    "monolog/monolog": "^2.2",
    "myclabs/php-enum": "^1.8",
    "php-di/php-di": "^6.3",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "^1.1",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "vlucas/phpdotenv": "^5.3",
    "zakirullin/mess": "^0.8.2"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.13",
    "ergebnis/php-cs-fixer-config": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.16",
    "infection/infection": "^0.21",
    "jangregor/phpstan-prophecy": "^0.8.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^0.12.79",
    "phpstan/phpstan-deprecation-rules": "^0.12.6",
    "phpstan/phpstan-phpunit": "^0.12.17",
    "phpstan/phpstan-strict-rules": "^0.12.9",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.12.2",
    "roave/security-advisories": "dev-master",
    "timeweb/phpstan-enum": "^2.2",
    "vimeo/psalm": "^3.14"
  },
  "config": {
    "apcu-autoloader": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4.9"
    },
    "preferred-install": "dist",
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "DImarkov\\Application\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DImarkov\\Application\\Test\\": "test/",
      "DImarkov\\Application\\Develop\\": "srcDevelop/"
    }
  },
  "support": {
    "issues": "https://github.com/dimarkov-git/slim-application/issues",
    "source": "https://github.com/dimarkov-git/slim-application"
  }
}
