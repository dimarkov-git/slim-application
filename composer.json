{
  "name": "dimarkov/slim-application",
  "type": "project",
  "description": "Provides a GitHub repository template for a PHP library based on slim framework.",
  "homepage": "https://github.com/dimarkov-git/slim-application",
  "license": "MIT",
  "authors": [
    {
      "name": "Denis Markov",
      "email": "dimarkov@outlook.com"
    }
  ],
  "require": {
    "php": "^7.4.9"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.6",
    "ergebnis/php-cs-fixer-config": "^2.2",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "config": {
    "apcu-autoloader": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4.9"
    },
    "preferred-install": "dist",
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "DImarkov\\Application\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DImarkov\\Application\\Test\\": "test/"
    }
  },
  "support": {
    "issues": "https://github.com/dimarkov-git/slim-application/issues",
    "source": "https://github.com/dimarkov-git/slim-application"
  }
}
